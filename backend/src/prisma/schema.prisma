generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categoria {
  id_categoria String       @id @db.VarChar(20)
  nombre       String       @db.VarChar(50)

  publicaciones publicaciones[]
}

model publicaciones {
  id_publicacion String      @id @db.VarChar(20)
  titulo         String      @db.VarChar(30)
  cuerpo         String      @db.Text
  id_categoria   String      @db.VarChar(20)
  fecha_inicio   DateTime    @db.Date
  fecha_fin      DateTime    @db.Date
  prioridad      String      @db.VarChar(20)
  adjuntos       String      @db.VarChar(20)
  etiquetas      String?     @db.VarChar(50)

  categoria      categoria   @relation(fields: [id_categoria], references: [id_categoria])
  notificacion   notificacion?
  salidaalumno   salidaalumno?
  baja           baja?
  guardia        guardia?
}

model notificacion {
  id_notificacion String        @id @db.VarChar(20)
  asunto          String        @db.VarChar(50)
  cuerpo          String        @db.Text
  id_publicacion  String        @unique @db.VarChar(20)

  publicacion     publicaciones @relation(fields: [id_publicacion], references: [id_publicacion])
}

model usuario {
  id_usuario    String  @id @db.VarChar(20)
  nombre        String  @db.VarChar(50)
  email         String  @db.VarChar(100) @unique
  rol           String  @db.VarChar(13)
  password_hash String  @db.VarChar(100)
}


model pantallatv {
  id_pantalla   String  @id @db.VarChar(20)
  nombre        String  @db.VarChar(50)
  token_acceso  String  @db.VarChar(1000)
  configuracion String  @db.VarChar(100)
  rotacion      String  @db.VarChar(10)
  last_refresh  DateTime @db.Time
}

model salidaalumno {
  id_salida      String        @id @db.VarChar(20)
  id_publicacion String        @unique @db.VarChar(20)
  tipo           String        @db.VarChar(20)
  observaciones  String?       @db.VarChar(100)

  publicacion    publicaciones @relation(fields: [id_publicacion], references: [id_publicacion])
}

model baja {
  id_baja        String        @id @db.VarChar(20)
  id_publicacion String        @unique @db.VarChar(20)
  profesor       String        @db.VarChar(50)
  prioridad      String        @db.VarChar(20)

  publicacion    publicaciones @relation(fields: [id_publicacion], references: [id_publicacion])
}

model guardia {
  id_guardia     String        @id @db.VarChar(20)
  id_publicacion String        @unique @db.VarChar(20)
  inicio_hora    DateTime      @db.Time
  fin_hora       DateTime      @db.Time
  aula_o_patio   String        @db.VarChar(5)
  observaciones  String?       @db.VarChar(50)
  profesor       String?       @db.VarChar(50)

  publicacion    publicaciones @relation(fields: [id_publicacion], references: [id_publicacion])
}



